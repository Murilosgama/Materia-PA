Algoritmo "AreaQuadrado" 
//Disciplina: PA
//Turma: 1°C/B

//Aluno: Murilo Silva Gama

Var 
base, altura, area, perimetro: real

//ENTRADA
Inicio
escreval ("Digite a altura do retangulo: ") escreval ("Digite a base do retangulo: ")
leia (altura)
leia (base)

//PROCESSAMENTO
area <- base* altura perimetro <- base + base + altura +altura

//SAIDA
escreval ("A area do retangulo é: ", area) escreval ("O perimetro do retangulo é: ", perimetro)

Fimalgoritmo